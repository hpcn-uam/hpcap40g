#!/bin/bash

prefix=$1
driv_names=${@:2}

echo "# Autogenerated modprobe configuration."

for name in $driv_names; do
	echo "install $name $prefix/usr/bin/hpcap-modprobe $name"
	echo "remove $name $prefix/usr/bin/hpcap-modprobe-remove $name"
done

echo
echo "# Blacklisting ixgbe and hpcap (and vf variants) to avoid conflicts at boot"
echo "blacklist ixgbe"
echo "blacklist ixgbevf"
echo "blacklist hpcap"
echo "blacklist hpcapvf"
